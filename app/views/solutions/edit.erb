<h2>Edit: <%=@solution.name%></h2>

<form action="/solutions/<%= @solution.id %>/edit" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <h3><label>Edit Proposal Title</label></h3>
    <input type="text" name="solution[name]" value="<%=@solution.name%>"><br>

    <h3><label>Solution Proposal</label></h3>
    <textarea name="solution[description]" rows="8" cols="80"><%=@solution.description%></textarea>

    <input type="submit" value="submit">
</form>
